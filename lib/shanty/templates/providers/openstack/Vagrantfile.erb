Vagrant.configure("2") do |config|
<% if @config["vm_box_url"] %>
  config.vm.box = "<%= @config["project_name"] %>_<%= Digest::MD5.hexdigest(@config["vm_box_url"]) %>"
  config.vm.box_url = "<%= @config["vm_box_url"] %>"
<% else %>
  config.vm.box = "dummy"
<% end %>

  config.ssh.private_key_path = "<%= @config["openstack"]["private_key_path"] %>"
  config.ssh.username = "ubuntu"

  config.vm.provider :openstack do |os|
    os.server_name = "cib_<%= rand(10000) %>.dev.wh.reachlocal.com"
    os.username = "<%= @config["openstack"]["username"] %>"
    os.api_key  = "<%= @config["openstack"]["password"] %>"
    os.flavor   = /m1.small/
    os.image    = /Ubuntu 12/
    os.endpoint = "http://rlpc-control.dev.wh.reachlocal.com:5000/v2.0/tokens"
    os.keypair_name = "<%= @config['openstack']['key_pair'] %>"
    os.metadata = {}
    # os.network = "DEV_APP"
  end

  config.vm.provision :puppet do |puppet|
    puppet.facter = {
      <% @config['puppet_facters'].each do |k, v| %>
        "<%= k %>" => "<%= v %>",
      <% end %>
      "role" => "ci",
      "operationsystem" => "debian",
      "vagrant_user" => "ubuntu",
      "vagrant_home" => "/home/ubuntu"
    }
    puppet.module_path = "<%= @config['puppet_path'] %>/modules"
    puppet.manifests_path = "<%= @config['puppet_path'] %>/manifests"
    puppet.manifest_file = "main.pp"
    puppet.options = "--verbose --debug"
  end
end
